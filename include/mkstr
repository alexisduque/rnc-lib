#include <sstream>

#ifndef __MKSTR_
#define __MKSTR_

namespace rnc {

/**
 * \brief Stringbuilder
 *
 * Example:
 * const string &mystr= MKStr() << "apple" << setw(5)    \
 *                              << setfill('0') << 42 << endl;
 * Produces: apple00042
 */
class MKStr
{
        std::ostringstream stream;
public:
        template <class T>
        MKStr &operator<<(const T& t)
        {
                stream << t;
                return *this;
        }

        MKStr& operator<<(std::ostream& (*f) (std::ostream&))
        {
                stream << f;
                return *this;
        }

        operator std::string() const { return stream.str(); }
};

}

#endif //__MKSTR_
